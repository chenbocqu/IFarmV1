<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MenuWrapper"
        android:layout_marginTop="@dimen/menuMargin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_farm_img"
            style="@style/MyImg"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_farm_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Wrapper"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/MyText.Large.Black"
                    android:text="农场" />


                <LinearLayout
                    style="@style/Wrapper"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:background="@null"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLabel1"
                        style="@style/FarmLabel"
                        android:layout_marginLeft="0dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvLabel2"
                        style="@style/FarmLabel" />

                    <TextView
                        android:id="@+id/tvLabel3"
                        style="@style/FarmLabel" />

                    <TextView
                        android:id="@+id/tvMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="···"
                        android:textColor="@color/yellow"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                style="@style/MyText"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lines="3"
                android:maxLines="3"
                android:text="这个农场还没有描述！"
                android:textColor="@color/text_light" />
        </LinearLayout>
    </LinearLayout>

    <!-- 昵称-->
    <RelativeLayout
        android:id="@+id/rl_farminfo"
        style="@style/MenuWrapper"
        android:layout_marginTop="@dimen/menuMargin">

        <ImageView
            android:id="@+id/iv_farm"
            style="@style/Menu_Icon.Left"
            android:src="@drawable/farminfo" />

        <TextView
            style="@style/MenuText"
            android:layout_toRightOf="@id/iv_farm"
            android:text="农场信息修改" />

        <ImageView style="@style/ArrowRight" />
    </RelativeLayout><!-- 昵称-->
    <RelativeLayout
        android:id="@+id/rl_device_manage"
        style="@style/MenuWrapper"
        android:layout_marginTop="@dimen/menuMargin">

        <ImageView
            android:id="@+id/iv_device_manage"
            style="@style/Menu_Icon.Left"
            android:src="@drawable/device" />

        <TextView
            style="@style/MenuText"
            android:layout_toRightOf="@id/iv_device_manage"
            android:text="采集设备管理" />

        <ImageView style="@style/ArrowRight" />
    </RelativeLayout><!-- 昵称-->
    <RelativeLayout
        android:id="@+id/rl_userinfo"
        style="@style/MenuWrapper"
        android:layout_marginTop="@dimen/menuMargin">

        <ImageView
            android:id="@+id/iv_help"
            style="@style/Menu_Icon.Left"
            android:src="@drawable/camera" />

        <TextView
            style="@style/MenuText"
            android:layout_toRightOf="@id/iv_help"
            android:text="摄像头管理" />

        <ImageView style="@style/ArrowRight" />
    </RelativeLayout>

</LinearLayout>
