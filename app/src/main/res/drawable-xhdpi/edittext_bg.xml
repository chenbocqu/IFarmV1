<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/edit_selected" />
            <corners android:radius="@dimen/edittextRadius" />
            <padding android:left="10dp" android:right="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/edit_pressed" />
            <corners android:radius="@dimen/edittextRadius" />
            <padding android:left="10dp" android:right="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/gray_light" />
            <corners android:radius="@dimen/edittextRadius" />
            <padding android:left="10dp" android:right="10dp" />
        </shape>
    </item>
</selector>
