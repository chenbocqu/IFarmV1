<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_farm_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/Wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/MyText.Small"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="3月25日"
                        android:textColor="@color/text_light" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/MyText.Large.Black"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/menuMargin"
                        android:layout_toLeftOf="@id/tv_time"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="阳光农场" />

                </RelativeLayout>

                <LinearLayout
                    style="@style/Wrapper"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_label1"
                        style="@style/LabelText"
                        android:layout_marginLeft="0dp" />

                    <TextView
                        android:id="@+id/tv_label2"
                        style="@style/LabelText" />

                    <TextView
                        android:id="@+id/tv_label3"
                        style="@style/LabelText" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <me.codeboy.android.aligntextview.CBAlignTextView
            android:id="@+id/tv_desc"
            style="@style/MyText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:hint="关于农场的一些描述！"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/text_light"
            android:textIsSelectable="true"
            cb:punctuationConvert="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/MyText"
                android:text="农场功能：" />

            <include layout="@layout/farm_functions" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/MyText.Large.Black"
                android:text="农场风采 " />

            <TextView
                style="@style/MyText"
                android:text="(请上传图片展示)" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <include layout="@layout/farm_imgs" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:gravity="right|bottom">

            <LinearLayout
                android:id="@+id/ll_farm_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:src="@drawable/data" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="数据" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:src="@drawable/add_photo" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="上传" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:padding="1dp"
                    android:src="@drawable/modify" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="修改" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_selector"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:src="@drawable/share" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="分享" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
