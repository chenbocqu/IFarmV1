<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_item_bg"
        android:orientation="vertical"
        android:padding="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_title"
                style="@style/MyText.Large.Black"
                android:text="新闻题目" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/MyText.Small"
                android:layout_alignParentRight="true"
                android:text="今天 9:30" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img1"
                style="@style/MyImg"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_farm_img" />

            <ImageView
                android:id="@+id/iv_img2"
                style="@style/MyImg"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_farm_img" />

            <ImageView
                android:id="@+id/iv_img3"
                style="@style/MyImg"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_farm_img" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_desc"
            style="@style/MyText"
            android:layout_marginTop="20dp"
            android:gravity="center|left"
            android:maxLines="3"
            android:text="新闻主要内容！" />

        <LinearLayout
            android:id="@+id/llMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:gravity="right|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:src="@drawable/concern_1" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="关注" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp">

                <ImageView
                    style="@style/Icon.25dp"
                    android:src="@drawable/comment" />

                <TextView
                    style="@style/MyText"
                    android:layout_marginLeft="5dp"
                    android:text="评论" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
