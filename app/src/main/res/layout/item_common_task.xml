<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/itemMargin">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_item_bg"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_name"
                style="@style/MyText.Large.Black"
                android:layout_alignParentLeft="true"
                android:text="升温" />

            <TextView
                android:id="@+id/tv_status"
                style="@style/LabelText"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_name"
                android:text="等待中" />

            <TextView
                android:id="@+id/tv_remaining_time"
                style="@style/LabelText.Blue"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_status"
                android:text="剩余时间" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/MyText.Small"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2017-12-03 03:45" />
        </RelativeLayout>

        <View
            style="@style/SplitLine"
            android:layout_marginTop="@dimen/itemMargin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemMargin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/MyText"
                android:text="开始时间：" />

            <TextView
                android:id="@+id/tv_start_time"
                style="@style/MyText"
                android:hint="暂无信息" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemMargin"
            android:gravity="center_vertical">

            <TextView
                style="@style/MyText"
                android:text="持续时间：" />

            <TextView
                android:id="@+id/tv_last_time"
                style="@style/MyText"
                android:hint="暂无信息" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemMargin"
            android:gravity="center_vertical">

            <TextView
                style="@style/MyText"
                android:text="作用位置：" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/MyText"
                android:hint="暂无信息" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/itemMargin">

            <TextView
                style="@style/MyText"
                android:text="任务描述：" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/MyText.Small"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="响堂生态农场A区域所有点位，自今天下午2:30开始，持续执行15分钟。" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/taskMenuHeight"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_task_info"
                style="@style/Icon.40dp"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/menu_detailinfo" />

            <ImageView
                android:id="@+id/iv_delete"
                style="@style/Icon.40dp"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/menu_delete" />

            <ImageView
                android:id="@+id/iv_stop"
                style="@style/Icon.40dp"
                android:background="@drawable/btn_selector"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/stop" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
