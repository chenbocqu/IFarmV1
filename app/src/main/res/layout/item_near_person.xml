<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp">

        <com.qican.ifarm.view.CircleImageView
            android:id="@+id/iv_headimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_head_female" />

        <ImageView
            android:id="@+id/iv_sex"
            style="@style/Menu_Icon.Small"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/female" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/Wrapper"
            android:layout_gravity="center_vertical"
            android:background="@null">

            <TextView
                android:id="@+id/tv_nickname"
                style="@style/MyText.Large.Black" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/MyText.Small"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_light" />

            <LinearLayout
                style="@style/Wrapper"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_nickname"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label1"
                    style="@style/LabelText" />

                <TextView
                    android:id="@+id/tv_label2"
                    style="@style/LabelText" />

                <TextView
                    android:id="@+id/tv_label3"
                    style="@style/LabelText" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            style="@style/MyText"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_light" />
    </LinearLayout>

</LinearLayout>
